<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#0099cc" tools:context=".GamePlay">


    <com.aashishtripathee.anda.GameBoard
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="true"
        android:background="@drawable/background"
        android:scaleType="centerCrop"
        android:id="@+id/the_canvas"
        android:layout_gravity="bottom|left|right|top" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/play_again"
        android:layout_gravity="center"
        android:width="@dimen/abc_action_bar_stacked_tab_max_width"
        android:textColor="#ffffff"
        android:background="#555555"
        android:alpha="0.75"
        android:enabled="false"
        android:gravity="center_vertical|center_horizontal"
        android:visibility="invisible" />


</FrameLayout>
